sleep .2
echo -en " ( º_º） ┬─┬     \r"
sleep .2
echo -en "  ( ºДº）┬─┬     \r"
sleep .4
echo -en "  (╯'Д'）╯︵⊏    \r"
sleep .2
echo -en "  (╯'□'）╯︵ ⊏   \r"
sleep .1
echo "  (╯°□°）╯︵ ┻━┻ "
sleep .4
