# Don't show progress meter or error messages...
silent

# ...Unless it fails
show-error

# Follow HTTP redirects
location

# Permit unsafed SSL
insecure

# Disguise as IE 9 on Windows 7.
user-agent = "Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)"

# When following a redirect, automatically set the previous URL as referer
referer = "http://google.com/bot.html;auto"

# read .netrc for user name and password OR URL
# netrc-optional

# Display progress as a simple progress bar
progress-bar
compressed

# Wait 60 seconds before timing out
connect-timeout = 60

# # Make the timestamp of the local file the same as the remote one (if possible)
# remote-time

# Resolve names to IPv4 addresses only
ipv4
