#autoload

if (( $# > 0 )); then
  if [[ "$1" == "-h" ]]; then
    echo "Usage: ql [options] file"
    echo "  -h    print these usage instructions"
    return 64
  else
    qlmanage -p "$@" &> /dev/null
  fi
else
  builtin print -P -u 2 -- "[%F{196}ERROR%f] No file was specified to be viewed with Quick Look."
  ql -h
  return 1
fi
