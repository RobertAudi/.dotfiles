#!/usr/bin/env zsh

if [[ -z "$1" ]]; then
  print -- "usage: ${${${(%):-%x}:t}/brew-/brew } FORMULA" >&2
  return 1
fi

local formula="$1"
local formula_prefix="$(brew --prefix "$formula" 2>/dev/null)"

if [[ -z "$formula_prefix" ]]; then
  print -- "[ERROR] Formula not found: $formula" >&2
  return 1
fi

print -- "==> ls $formula_prefix"
ls $formula_prefix
