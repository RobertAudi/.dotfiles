#autoload

if (($#)); then
  if [[ "$1" == "-h" ]]; then
    echo "Usage: ql [options] file"
    echo "  -h    print these usage instructions"
    return 64
  else
    qlmanage -p "$@" &> /dev/null
  fi
else
  builtin print -P -- "[%F{196}ERROR%f] No file was specified to be viewed with Quick Look." >&2
  ql -h
  return 1
fi
