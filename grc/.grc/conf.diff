# new lines and filenames (unified diff)
regexp=^\+(.*$)
colours=green
count=more
=======
# removed lines and filenames (unified diff)
regexp=^\-(--.+$|[^\-].*$|$)
colours=red
count=more
========
# new lines
regexp=^\>([^\>].*|$)
colours=green
count=more
=======
# removed lines
regexp=^\<([^\<].*|$)
colours=red
count=more
=======
# lines affected
regexp=^@@ .* @@$
colours=magenta
count=more

