#!/usr/bin/env zsh

emulate -L zsh

setopt extended_glob

autoload -Uz zrecompile

local f
for f in ${HOME}/.zshenv(-N.) ${ZDOTDIR}/***/*.zsh(-N.) ${ZDOTDIR}/***/{functions,functions/utils,completions}/*(-N.) ${ZDOTDIR}/.{zlog{in,out},zprofile,zsh{env,rc}}(-N.) ; do
  zrecompile -p $f && command rm -fv $f.zwc.old
done
