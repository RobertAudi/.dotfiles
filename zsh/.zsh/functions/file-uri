#autoload

# quick un-smart function to prepend file:// to local requests:
# (refine this for multiple files, etc, later on)

if (($#)); then
  local file="$1" ; shift

  if (($#)); then
    print-warning "$# arguments ignored: $@"
  fi

  if [[ -f $PWD/$file ]]; then
    echo "file://$PWD/$file"
  elif [[ -f $fie ]]; then
    echo "file://$file"
  else
    print-error "File not found: '$file'"
  fi
else
  echo "usage: file-uri <FILE>"
  return 64
fi
