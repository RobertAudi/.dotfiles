#autoload

# Search for various types or README file in dir and display them in $PAGER

local files=(./(#i)*readme*(ND))
if (($#files)); then
  if is_macos && type marked >/dev/null; then
    local markdown_files="${(@M)files:#*.md}"
    local other_files="${(@)files:#*.md}"
    (($#markdown_files)) && marked $markdown_files
    (($#other_files)) && $PAGER $other_files
  else
    $PAGER $files
  fi
else
  print-info "No README files."
fi
