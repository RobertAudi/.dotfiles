#autoload

emulate -L zsh

local message

if (( $# > 0 )); then
  message="$@"
else
  print-error "1+ arguments required!"
  return 1
fi

if is-callable terminal-notifier; then
  if is-callable reattach-to-user-namespace; then
    reattach-to-user-namespace terminal-notifier -message "$message"
  else
    terminal-notifier -message "$message"
  fi
elif is-callable notify-send; then
  notify-send "$message"
else
  print-info "$message"
fi
