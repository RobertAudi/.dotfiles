#autoload

__print_localip() {
  print "Local IP: $(ipconfig getifaddr en0)"
}

__print_publicip() {
  print "Public IP: $(command curl -q -f -s -4 http://checkip.amazonaws.com)"
}

ip() {
  zparseopts -D -E l+=listlocal a+=listall
  if (( $#listall )); then
    __print_localip
    __print_publicip
  elif (( $#listlocal )); then
    __print_localip
  else
    __print_publicip
  fi
}

ip "$@"
