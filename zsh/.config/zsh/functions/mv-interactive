#autoload

me="$(print -P %N)"

if [[ "$1" == "--help" ]]; then
  print "Usage: $me [OPTION]... SOURCE"
  print "Renames SOURCE, allowing interactive editing of the new name."
  print
  print "The following options are passed on to mv(1):"
  print "  -b, -u"
  return 0
fi

opts=()
while getopts :bu opt; do
  if [[ $opt = "?" ]]; then
    print "$me: unrecognized option: -$OPTARG" >&2
    print "Try \`$me --help' for more information." >&2
    return 1
  fi
  opts=( "$opts[@]" "-$opt" )
done
(( OPTIND > 1 )) && shift $(( OPTIND - 1 ))

if (( $# == 0 )); then
  print "$me: missing file argument"
  return 1
fi

if (( $# > 1 )); then
  print "$me: too many arguments"
  return 1
fi

src="$1"

if ! [[ -e "$src" ]]; then
  print "$me: can't stat source $src"
  return 1
fi

dest="$src"
vared -p 'New name: ' dest

if [[ "$src" == "$dest" ]]; then
  print "$me: no change in name"
  return 1
fi

if [[ -e "$dest" ]]; then
  echo -n "$me: $dest already exists; replace? "
  if ! read -q replace; then
    echo "Aborted."
    return 1
  fi
fi

mv "$opts[@]" -- "$src" "$dest"
